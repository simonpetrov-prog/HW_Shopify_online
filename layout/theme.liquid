<!doctype html>
<html lang="de">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ page_title }} â€“ {{ settings.shop_name | default: shop.name }}</title>
    {{ content_for_header }}
    {{ 'base.css' | asset_url | stylesheet_tag }}

    <style>
      :root{
        --primary: {{ settings.primary_color | default: '#000000' }};
        --bg: {{ settings.background_color | default: '#ffffff' }};
      }
      body{ background: var(--bg); }
      .btn, button{ background: var(--primary); }
      a.btn{ color:#fff; }
    </style>
  </head>
  <body>
    <header>
      {% section 'header' %}
    </header>

    <main role="main">
      {{ content_for_layout }}
    </main>

    <footer>
      {% section 'footer' %}
    </footer>
  </body>
</html>
