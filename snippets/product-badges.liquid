{% if product.tags contains 'Neu' %}
  <span class="badge new">Neu</span>
{% endif %}

{% if product.tags contains 'Limited' %}
  <span class="badge limited">Limited</span>
{% endif %}

{% if product.compare_at_price > product.price %}
  <span class="badge sale">Sale</span>
{% endif %}

<style>
.badge {
  display:inline-block;
  padding:4px 8px;
  border-radius:6px;
  font-size:12px;
  color:#fff;
  margin-right:5px;
}
.badge.new { background:#007bff; }        /* KÃ¶nigsblau */
.badge.limited { background:#ff9900; }    /* Orange */
.badge.sale { background:#e60000; }       /* Rot */
</style>
