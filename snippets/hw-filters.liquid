/* Handy: Panel als Bottom Sheet */
@media (max-width: 768px){
  .hw-filter-mobile-btn{ display:block; }
  .filters-container{ border:0; padding:0; }
  .hw-filter-panel{
    position:fixed; left:0; right:0; bottom:-100%; top:auto;
    border-radius:16px 16px 0 0; border:0;
    box-shadow:0 -12px 40px rgba(0,0,0,.2);
    transition:bottom .28s ease;
    padding:16px; max-height:75vh; overflow:auto; background:#fff;
  }
  .hw-filter-panel-head{ display:flex; }
  .hw-filter-overlay[hidden]{ display:none; }
  .filters-container.is-open .hw-filter-panel{ bottom:0; }
  .filters-container.is-open .hw-filter-overlay{ display:block; }
  .mobile-only{ display:flex; }
  .filter-actions.mobile-only{ position:sticky; bottom:0; background:#fff; padding-top:10px; }
}

// --- Mobile Overlay Controls ---
(function(){
  const root = document.querySelector('[data-hw-filters]');
  if(!root) return;
  const openBtn  = root.querySelector('[data-mobile-open]');
  const closeBtn = root.querySelector('[data-mobile-close]');
  const overlay  = root.querySelector('[data-overlay]');
  const panel    = root.querySelector('[data-mobile-panel]');

  const open = ()=>{
    root.classList.add('is-open');
    overlay?.removeAttribute('hidden');
    document.documentElement.style.overflow = 'hidden'; // scroll lock
  };
  const close = ()=>{
    root.classList.remove('is-open');
    overlay?.setAttribute('hidden','');
    document.documentElement.style.overflow = '';
  };

  openBtn?.addEventListener('click', open);
  closeBtn?.addEventListener('click', close);
  overlay?.addEventListener('click', close);
  document.addEventListener('keydown', (e)=>{ if(e.key==='Escape') close(); });

  // Nach Anwenden/Zur√ºcksetzen auf Handy Panel schlie√üen
  const apply = root.querySelector('[data-apply]');
  apply?.addEventListener('click', ()=>{ if(window.matchMedia('(max-width:768px)').matches) close(); });
  root.querySelectorAll('[data-reset]').forEach(btn=>{
    btn.addEventListener('click', ()=>{ if(window.matchMedia('(max-width:768px)').matches) close(); });
  });
})();

</script>
