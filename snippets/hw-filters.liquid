.hw-filter-panel{
  /* Desktop: normal */
  position:static; background:#fff; border:2px solid #0046BE; border-radius:10px;
  padding:12px; margin-top:8px; z-index:50;
}
.hw-filter-panel-head{ display:none; align-items:center; justify-content:space-between; margin-bottom:8px; }
