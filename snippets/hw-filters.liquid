

<div class="hw-filter-shell">
  <div class="hw-filter-head">
    <h2>Filter</h2>

    <div class="hw-active-filters" id="hw-active-filters">
      
    </div>
  </div>


  <div class="hw-filter-tabs">
    <button type="button" class="hw-tab is-active" data-filter="price">Preis ▾</button>
    <button type="button" class="hw-tab" data-filter="color">Farbe ▾</button>
    <button type="button" class="hw-tab" data-filter="brand">Marke ▾</button>
    <button type="button" class="hw-tab" data-filter="th">TH ▾</button>

    <button type="button" class="hw-tab hw-tab--reset" id="hw-filter-reset">Zurücksetzen</button>
  </div>

  
  <div class="hw-panels">


    <div class="hw-panel is-open" data-panel="price">
      <div class="hw-price-grid">
        <div>
          <label for="hw-price-min">von</label>
          <input id="hw-price-min" type="number" step="0.01" min="0" placeholder="z. B. 2,99">
        </div>
        <div>
          <label for="hw-price-max">bis</label>
          <input id="hw-price-max" type="number" step="0.01" min="0" placeholder="z. B. 9,99">
        </div>
      </div>
      <button class="hw-apply" data-apply="price">Filter anwenden</button>
    </div>


    <div class="hw-panel" data-panel="color">
      <div class="hw-chip-wrap" id="hw-color-list">
        {% assign colors = "Türkis, Blau, Rot, Weiß, Schwarz, Grau, Orange" | split: "," %}
        {% for c in colors %}
          {% assign label = c | strip %}
          <label class="hw-chip" data-color="{{ label }}">
            <input type="checkbox" value="{{ label | escape }}">
            <span class="dot"></span>
            <span>{{ label }}</span>
          </label>
        {% endfor %}
      </div>
      <button class="hw-apply" data-apply="color">Filter anwenden</button>
    </div>

    
    <div class="hw-panel" data-panel="brand">
      <div class="hw-chip-wrap" id="hw-brand-list">
        {% assign auto_brands = "Ferrari, Porsche, Lamborghini, BMW, Mercedes, Toyota, Koenigsegg" | split: "," %}
        {% for b in auto_brands %}
          {% assign label = b | strip %}
          <label class="hw-chip" data-brand="{{ label }}">
            <input type="checkbox" value="{{ label | escape }}">
            <span>{{ label }}</span>
          </label>
        {% endfor %}
      </div>
      <button class="hw-apply" data-apply="brand">Filter anwenden</button>
    </div>


    <div class="hw-panel" data-panel="th">
      <div class="hw-chip-wrap hw-chip-wrap--column">
        <label class="hw-chip" data-th="Ja">
          <input type="radio" name="hw-th" value="Ja">
          <span>Ja</span>
        </label>
        <label class="hw-chip" data-th="Ohne">
          <input type="radio" name="hw-th" value="Ohne">
          <span>Ohne</span>
        </label>
      </div>
      <button class="hw-apply" data-apply="th">Filter anwenden</button>
    </div>

  </div>
</div>

<style>
  /* Preis-Panel hübsch machen */
  .hw-panel--price {
    display: flex;
    gap: 10px;
    align-items: center;
    flex-wrap: wrap;
  }

  .hw-price-group {
    display: flex;
    gap: 6px;
    align-items: center;
  }

  /* die Inputs dürfen NICHT über den blauen Rahmen raus */
  .hw-panel--price input[type="number"],
  .hw-panel--price input[type="text"] {
    max-width: 110px;
    width: 100%;
  }

  /* auf Handy noch schmaler */
  @media (max-width: 640px) {
    .hw-panel--price {
      flex-direction: column;
      align-items: flex-start;
    }
    .hw-panel--price input[type="number"],
    .hw-panel--price input[type="text"] {
      max-width: 140px;
    }
  }
</style>
