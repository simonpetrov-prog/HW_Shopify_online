<!-- HW FILTER SECTION -->
<div class="hw-filter-box">
  <div class="hw-filter-tabs">
    <button class="hw-tab" data-filter="price">Preis</button>
    <button class="hw-tab" data-filter="color">Farbe</button>
    <button class="hw-tab" data-filter="brand">Marke</button>
    <button class="hw-tab" data-filter="rarity">Seltenheit</button>
  </div>

  <div class="hw-filter-panels">
    <!-- Preis -->
    <div class="hw-panel" data-panel="price">
      <label>Preis von:</label>
      <input type="number" id="price-min" placeholder="Min" min="0">
      <label>bis:</label>
      <input type="number" id="price-max" placeholder="Max" min="0">
    </div>

    <!-- Farbe -->
    <div class="hw-panel" data-panel="color" hidden>
      <label><input type="checkbox" value="rot"> Rot</label>
      <label><input type="checkbox" value="blau"> Blau</label>
      <label><input type="checkbox" value="weiß"> Weiß</label>
      <label><input type="checkbox" value="schwarz"> Schwarz</label>
    </div>

    <!-- Marke -->
    <div class="hw-panel" data-panel="brand" hidden>
      <label><input type="checkbox" value="porsche"> Porsche</label>
      <label><input type="checkbox" value="ferrari"> Ferrari</label>
      <label><input type="checkbox" value="bmw"> BMW</label>
      <label><input type="checkbox" value="lamborghini"> Lamborghini</label>
    </div>

    <!-- Seltenheit -->
    <div class="hw-panel" data-panel="rarity" hidden>
      <label><input type="checkbox" value="th"> Treasure Hunt (TH)</label>
      <label><input type="checkbox" value="sth"> Super Treasure Hunt (STH)</label>
    </div>
  </div>

  <div class="hw-filter-actions">
    <button class="btn" data-filter-apply>Filter anwenden</button>
    <button class="btn-outline" data-filter-reset>Zurücksetzen</button>
  </div>
</div>

<style>
/* --- BLAUER FILTER-KASTEN --- */
.hw-filter-box{
  border:3px solid #0046BE;         /* Königsblauer Rahmen */
  border-radius:16px;
  background:#fff;
  padding:14px 16px 12px;
  margin-bottom:18px;
  box-shadow:0 4px 16px rgba(0,0,0,.04);
}

/* --- Tabs --- */
.hw-filter-tabs{
  display:flex;
  gap:10px;
  flex-wrap:wrap;
  margin-bottom:12px;
}
.hw-tab{
  background:#eee;
  border:1px solid #ddd;
  border-radius:8px;
  padding:6px 12px;
  font-weight:700;
  cursor:pointer;
}
.hw-tab.active{
  background:#0046BE;
  color:#fff;
  border-color:#0046BE;
}

/* --- Panels --- */
.hw-panel{ display:none; margin-bottom:12px; }
.hw-panel[hidden]{ display:none; }
.hw-panel:not([hidden]){ display:block; }

/* --- Eingaben & Labels --- */
.hw-panel label{
  display:inline-flex;
  align-items:center;
  gap:6px;
  margin-right:10px;
  margin-bottom:6px;
  cursor:pointer;
}
.hw-panel input[type="number"]{
  width:90px;
  border:1px solid #ccc;
  border-radius:6px;
  padding:4px 6px;
}

/* --- Aktionen --- */
.hw-filter-actions{
  display:flex;
  justify-content:flex-end;
  gap:10px;
}
.btn{
  background:#0046BE;
  color:#fff;
  border:0;
  border-radius:8px;
  padding:8px 14px;
  font-weight:700;
}
.btn-outline{
  background:#fff;
  color:#0046BE;
  border:2px solid #0046BE;
  border-radius:8px;
  padding:8px 14px;
  font-weight:700;
}
.btn:hover{filter:brightness(.95);}
.btn-outline:hover{background:#0046BE;color:#fff;}
</style>

<script>
document.addEventListener('DOMContentLoaded',()=>{
  // Tabs umschalten
  document.querySelectorAll('.hw-tab').forEach(tab=>{
    tab.addEventListener('click',()=>{
      document.querySelectorAll('.hw-tab').forEach(t=>t.classList.remove('active'));
      document.querySelectorAll('.hw-panel').forEach(p=>p.hidden=true);
      tab.classList.add('active');
      const panel=document.querySelector(`.hw-panel[data-panel="${tab.dataset.filter}"]`);
      if(panel) panel.hidden=false;
    });
  });

  // Zurücksetzen
  document.querySelector('[data-filter-reset]').addEventListener('click',()=>{
    document.querySelectorAll('.hw-panel input').forEach(i=>{
      if(i.type==='checkbox') i.checked=false;
      if(i.type==='number') i.value='';
    });
  });
});
</script>
