<section class="hw-facts-band" style="
  --hw-bg1: {{ section.settings.bg1 }};
  --hw-bg2: {{ section.settings.bg2 }};
  --hw-text: {{ section.settings.text }};
  --hw-muted: {{ section.settings.muted }};
  --hw-accent: {{ section.settings.accent }};
  --hw-max: {{ section.settings.max_width }}px;
">
  <div class="hw-facts-band__inner">
    <div class="hw-facts-band__head">
      <div>
        <h2 class="hw-facts-band__title">{{ section.settings.heading }}</h2>
        <p class="hw-facts-band__sub">{{ section.settings.subheading }}</p>
      </div>
    </div>

    <div class="hw-facts-grid" style="--cols: {{ section.settings.columns }};">
      <!-- CARD 1 -->
      <article class="hw-fact-card">
        <div class="hw-fact-card__icon">
          {% if section.settings.c1_image != blank %}
            <img src="{{ section.settings.c1_image | image_url: width: 160 }}" alt="" loading="lazy" width="44" height="44">
          {% else %}
            <svg viewBox="0 0 24 24" aria-hidden="true"><path d="M20.5 3.5c-6.2 1-10.8 4.3-13 9.3-.8 1.9-1 3.8-.7 5.7 1.8.3 3.8.1 5.7-.7 5-2.2 8.3-6.8 9.3-13zM7.8 18.2c1.5-4.7 5.2-8.4 9.9-9.9" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"/></svg>
          {% endif %}
        </div>
        <div class="hw-fact-card__content">
          <h3 class="hw-fact-card__title">{{ section.settings.c1_title }}</h3>
          <p class="hw-fact-card__text">{{ section.settings.c1_text }}</p>
        </div>
      </article>

      <!-- CARD 2 -->
      <article class="hw-fact-card">
        <div class="hw-fact-card__icon">
          {% if section.settings.c2_image != blank %}
            <img src="{{ section.settings.c2_image | image_url: width: 160 }}" alt="" loading="lazy" width="44" height="44">
          {% else %}
            <svg viewBox="0 0 24 24" aria-hidden="true"><path d="M12 2l8 4v6c0 5-3.4 9.4-8 10-4.6-.6-8-5-8-10V6l8-4z" fill="none" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/></svg>
          {% endif %}
        </div>
        <div class="hw-fact-card__content">
          <h3 class="hw-fact-card__title">{{ section.settings.c2_title }}</h3>
          <p class="hw-fact-card__text">{{ section.settings.c2_text }}</p>
        </div>
      </article>

      <!-- CARD 3 -->
      <article class="hw-fact-card">
        <div class="hw-fact-card__icon">
          {% if section.settings.c3_image != blank %}
            <img src="{{ section.settings.c3_image | image_url: width: 160 }}" alt="" loading="lazy" width="44" height="44">
          {% else %}
            <svg viewBox="0 0 24 24" aria-hidden="true"><path d="M3 13l2-6h14l2 6v6h-2a2 2 0 0 1-4 0H9a2 2 0 0 1-4 0H3v-6zM7 7l1.2-2h7.6L17 7" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
          {% endif %}
        </div>
        <div class="hw-fact-card__content">
          <h3 class="hw-fact-card__title">{{ section.settings.c3_title }}</h3>
          <p class="hw-fact-card__text">{{ section.settings.c3_text }}</p>
        </div>
      </article>

      <!-- CARD 4 -->
      <article class="hw-fact-card">
        <div class="hw-fact-card__icon">
          {% if section.settings.c4_image != blank %}
            <img src="{{ section.settings.c4_image | image_url: width: 160 }}" alt="" loading="lazy" width="44" height="44">
          {% else %}
            <svg viewBox="0 0 24 24" aria-hidden="true"><path d="M12 2v3M12 19v3M2 12h3M19 12h3" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"/><path d="M12 7a5 5 0 1 0 5 5" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"/><path d="M12 10a2 2 0 1 0 2 2" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"/></svg>
          {% endif %}
        </div>
        <div class="hw-fact-card__content">
          <h3 class="hw-fact-card__title">{{ section.settings.c4_title }}</h3>
          <p class="hw-fact-card__text">{{ section.settings.c4_text }}</p>
        </div>
      </article>
    </div>
  </div>
</section>

<style>
  .hw-facts-band{
    position: relative;
    color: var(--hw-text);
    padding: 22px 0;
    overflow: hidden;
    background: radial-gradient(1200px 400px at 15% 0%, rgba(255,255,255,.08), transparent 55%),
                radial-gradient(900px 380px at 85% 30%, rgba(255,255,255,.06), transparent 60%),
                linear-gradient(180deg, var(--hw-bg1), var(--hw-bg2));
  }
  .hw-facts-band::before{
    content:"";
    position:absolute; inset:0;
    background-image: radial-gradient(rgba(255,255,255,.10) 1px, transparent 1px);
    background-size: 18px 18px;
    opacity: .06;
    pointer-events:none;
  }
  .hw-facts-band__inner{
    position: relative;
    width: min(var(--hw-max), 92%);
    margin: 0 auto;
  }
  .hw-facts-band__title{
    margin: 0;
    font-size: 18px;
    font-weight: 900;
  }
  .hw-facts-band__sub{
    margin: 6px 0 0;
    font-size: 13px;
    color: var(--hw-muted);
  }
  .hw-facts-grid{
    margin-top: 14px;
    display: grid;
    grid-template-columns: repeat(var(--cols), minmax(0, 1fr));
    gap: 12px;
  }
  .hw-fact-card{
    display: flex;
    gap: 12px;
    align-items: flex-start;
    padding: 14px;
    border-radius: 18px;
    background: rgba(255,255,255,.06);
    border: 1px solid rgba(255,255,255,.10);
    box-shadow: 0 10px 28px rgba(0,0,0,.20);
    backdrop-filter: blur(6px);
    -webkit-backdrop-filter: blur(6px);
    transition: transform .18s ease, border-color .18s ease, background .18s ease;
  }
  .hw-fact-card:hover{
    transform: translateY(-2px);
    border-color: rgba(255,255,255,.18);
    background: rgba(255,255,255,.075);
  }
  .hw-fact-card__icon{
    flex: 0 0 auto;
    width: 46px;
    height: 46px;
    border-radius: 16px;
    display: grid;
    place-items: center;
    background: color-mix(in srgb, var(--hw-accent) 22%, rgba(255,255,255,.08));
    border: 1px solid color-mix(in srgb, var(--hw-accent) 40%, rgba(255,255,255,.10));
    box-shadow: 0 10px 22px rgba(0,0,0,.22);
  }
  .hw-fact-card__icon img{ width: 26px; height: 26px; object-fit: contain; display:block; }
  .hw-fact-card__icon svg{ width: 22px; height: 22px; color: #fff; opacity: .95; }
  .hw-fact-card__title{
    margin: 1px 0 0;
    font-size: 14px;
    font-weight: 900;
  }
  .hw-fact-card__text{
    margin: 6px 0 0;
    font-size: 12.8px;
    line-height: 1.25;
    color: var(--hw-muted);
  }
  @media (max-width: 980px){
    .hw-facts-grid{ grid-template-columns: repeat(2, minmax(0, 1fr)); }
  }
  @media (max-width: 520px){
    .hw-facts-grid{ grid-template-columns: 1fr; }
  }
</style>

