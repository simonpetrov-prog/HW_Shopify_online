<section class="hw-facts" style="
  --hw-bg: {{ section.settings.bg }};
  --hw-text: {{ section.settings.text }};
  --hw-accent: {{ section.settings.accent }};
  --hw-max: {{ section.settings.max_width }}px;
">
  <div class="hw-facts__inner">
    {% if section.settings.heading != blank %}
      <div class="hw-facts__head">
        <h2 class="hw-facts__title">{{ section.settings.heading }}</h2>
        {% if section.settings.subheading != blank %}
          <p class="hw-facts__sub">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="hw-facts__grid" style="--cols: {{ section.settings.columns }};">
      {% for block in section.blocks %}
        <div class="hw-fact" {{ block.shopify_attributes }}>
          {% if block.settings.image != blank %}
            <div class="hw-fact__img">
              <img
                src="{{ block.settings.image | image_url: width: 120 }}"
                alt="{{ block.settings.title | escape }}"
                loading="lazy"
                width="60"
                height="60"
              >
            </div>
          {% endif %}

          <div class="hw-fact__content">
            {% if block.settings.title != blank %}
              <div class="hw-fact__title">{{ block.settings.title }}</div>
            {% endif %}
            {% if block.settings.text != blank %}
              <div class="hw-fact__text">{{ block.settings.text }}</div>
            {% endif %}

            {% if block.settings.link != blank and block.settings.link_label != blank %}
              <a class="hw-fact__link" href="{{ block.settings.link }}">
                {{ block.settings.link_label }}
              </a>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .hw-facts{
    background: var(--hw-bg);
    color: var(--hw-text);
    padding: 18px 0;
  }
  .hw-facts__inner{
    width: min(var(--hw-max), 92%);
    margin: 0 auto;
  }
  .hw-facts__head{
    margin-bottom: 12px;
  }
  .hw-facts__title{
    margin: 0;
    font-size: 18px;
    font-weight: 800;
  }
  .hw-facts__sub{
    margin: 6px 0 0;
    opacity: .85;
    font-size: 13px;
  }

  .hw-facts__grid{
    display: grid;
    grid-template-columns: repeat(var(--cols), minmax(0, 1fr));
    gap: 12px;
  }
  .hw-fact{
    display: flex;
    gap: 10px;
    align-items: center;
    padding: 12px;
    border-radius: 14px;
    background: rgba(255,255,255,.06);
    border: 1px solid rgba(255,255,255,.10);
  }
  .hw-fact__img{
    flex: 0 0 auto;
    width: 44px;
    height: 44px;
    display: grid;
    place-items: center;
    border-radius: 12px;
    background: rgba(255,255,255,.10);
  }
  .hw-fact__img img{
    max-width: 28px;
    max-height: 28px;
    object-fit: contain;
    display: block;
  }
  .hw-fact__title{
    font-weight: 800;
    font-size: 14px;
    line-height: 1.2;
  }
  .hw-fact__text{
    font-size: 12.5px;
    opacity: .9;
    margin-top: 3px;
    line-height: 1.25;
  }
  .hw-fact__link{
    display: inline-block;
    margin-top: 6px;
    font-size: 12.5px;
    font-weight: 700;
    color: var(--hw-accent);
    text-decoration: none;
  }
  .hw-fact__link:hover{ text-decoration: underline; }

  @media (max-width: 900px){
    .hw-facts__grid{ grid-template-columns: repeat(2, minmax(0, 1fr)); }
  }
  @media (max-width: 520px){
    .hw-facts__grid{ grid-template-columns: 1fr; }
  }
</style>

{% schema %}
{
  "name": "Info Faktenzeile",
  "settings": [
    { "type": "text", "id": "heading", "label": "Ãœberschrift", "default": "Schnelle Infos" },
    { "type": "text", "id": "subheading", "label": "Untertitel", "default": "Warum bei HW Central Seller kaufen?" },

    { "type": "range", "id": "columns", "label": "Spalten (Desktop)", "min": 2, "max": 4, "step": 1, "default": 4 },
    { "type": "range", "id": "max_width", "label": "Max. Breite (px)", "min": 900, "max": 1400, "step": 50, "default": 1200 },

    { "type": "color", "id": "bg", "label": "Hintergrund", "default": "#0B1B2B" },
    { "type": "color", "id": "text", "label": "Textfarbe", "default": "#FFFFFF" },
    { "type": "color", "id": "accent", "label": "Akzent", "default": "#FF6B00" }
  ],
  "blocks": [
    {
      "type": "fact",
      "name": "Fakt",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Bild/Icon" },
        { "type": "text", "id": "title", "label": "Titel", "default": "Schneller Versand" },
        { "type": "text", "id": "text", "label": "Text", "default": "Sicher verpackt & schnell bei dir." },
        { "type": "url", "id": "link", "label": "Link (optional)" },
        { "type": "text", "id": "link_label", "label": "Link-Text (optional)", "default": "Mehr erfahren" }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    { "name": "Info Faktenzeile", "blocks": [ { "type": "fact" }, { "type": "fact" }, { "type": "fact" }, { "type": "fact" } ] }
  ]
}
{% endschema %}
