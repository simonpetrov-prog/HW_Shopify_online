      {% endfor %}
    </div>
  </div>
</section>

<style>
  .hw-facts-band{
    position: relative;
    color: var(--hw-text);
    padding: 22px 0;
    overflow: hidden;
    background: radial-gradient(1200px 400px at 15% 0%, rgba(255,255,255,.08), transparent 55%),
                radial-gradient(900px 380px at 85% 30%, rgba(255,255,255,.06), transparent 60%),
                linear-gradient(180deg, var(--hw-bg1), var(--hw-bg2));
  }
  /* subtle “premium” grain */
  .hw-facts-band::before{
    content:"";
    position:absolute; inset:0;
    background-image: radial-gradient(rgba(255,255,255,.10) 1px, transparent 1px);
    background-size: 18px 18px;
    opacity: .06;
    pointer-events:none;
  }
  .hw-facts-band__inner{
    position: relative;
    width: min(var(--hw-max), 92%);
    margin: 0 auto;
  }
  .hw-facts-band__head{
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    gap: 16px;
    margin-bottom: 14px;
  }
  .hw-facts-band__title{
    margin: 0;
    font-size: 18px;
    font-weight: 900;
    letter-spacing: .2px;
  }
  .hw-facts-band__sub{
    margin: 0;
    font-size: 13px;
    color: var(--hw-muted);
    max-width: 520px;
    text-align: right;
  }

  .hw-facts-grid{
    display: grid;
    grid-template-columns: repeat(var(--cols), minmax(0, 1fr));
    gap: 12px;
  }

  .hw-fact-card{
    display: flex;
    gap: 12px;
    align-items: flex-start;
    padding: 14px;
    border-radius: 18px;
    background: rgba(255,255,255,.06);
    border: 1px solid rgba(255,255,255,.10);
    box-shadow: 0 10px 28px rgba(0,0,0,.20);
    backdrop-filter: blur(6px);
    -webkit-backdrop-filter: blur(6px);
    transition: transform .18s ease, border-color .18s ease, background .18s ease;
  }
  .hw-fact-card:hover{
    transform: translateY(-2px);
    border-color: rgba(255,255,255,.18);
    background: rgba(255,255,255,.075);
  }

  .hw-fact-card__icon{
    flex: 0 0 auto;
    width: 46px;
    height: 46px;
    border-radius: 16px;
    display: grid;
    place-items: center;
    background: color-mix(in srgb, var(--hw-accent) 22%, rgba(255,255,255,.08));
    border: 1px solid color-mix(in srgb, var(--hw-accent) 40%, rgba(255,255,255,.10));
    box-shadow: 0 10px 22px rgba(0,0,0,.22);
  }
  .hw-fact-card__icon img{
    width: 26px; height: 26px;
    object-fit: contain;
    display:block;
  }
  .hw-fact-card__icon svg{
    width: 22px; height: 22px;
    color: #fff;
    opacity: .95;
  }

  .hw-fact-card__title{
    margin: 1px 0 0;
    font-size: 14px;
    font-weight: 900;
    letter-spacing: .15px;
  }
  .hw-fact-card__text{
    margin: 6px 0 0;
    font-size: 12.8px;
    line-height: 1.25;
    color: var(--hw-muted);
  }
  .hw-fact-card__link{
    display:inline-block;
    margin-top: 8px;
    font-size: 12.5px;
    font-weight: 800;
    color: var(--hw-accent);
    text-decoration: none;
  }
  .hw-fact-card__link:hover{ text-decoration: underline; }

  @media (max-width: 980px){
    .hw-facts-band__head{ flex-direction: column; align-items: flex-start; }
    .hw-facts-band__sub{ text-align: left; }
    .hw-facts-grid{ grid-template-columns: repeat(2, minmax(0, 1fr)); }
  }
  @media (max-width: 520px){
    .hw-facts-grid{ grid-template-columns: 1fr; }
  }
</style>

