    { "type": "image_picker", "id": "c4_image", "label": "Icon/Bild (optional)" },
    { "type": "text", "id": "c4_title", "label": "Titel", "default": "Gezielt kaufen statt Zufall" },
    { "type": "text", "id": "c4_text", "label": "Text", "default": "Du suchst ein bestimmtes Modell? Bei uns findest du es gezielt im Shop." }
  ],
  "presets": [{ "name": "Info Faktenzeile" }]
}
