<section class="hw-feature-panel" style="
  --hw-max: {{ section.settings.max_width }}px;
  --hw-bg: {{ section.settings.section_bg }};
  --hw-aside: {{ section.settings.aside_bg }};
  --hw-text: {{ section.settings.text }};
  --hw-muted: {{ section.settings.muted }};
  --hw-card: {{ section.settings.card_bg }};
  --hw-border: {{ section.settings.border }};
  --hw-accent: {{ section.settings.accent }};
">
  <div class="hw-feature-panel__inner">
    <div class="hw-feature-panel__layout">
      <!-- LEFT: DARK INFO PANEL -->
      <aside class="hw-feature-panel__aside">
        <div class="hw-feature-panel__badge">{{ section.settings.badge }}</div>

        <h2 class="hw-feature-panel__title">{{ section.settings.heading }}</h2>
        <p class="hw-feature-panel__sub">{{ section.settings.subheading }}</p>

        {% if section.settings.cta_label != blank and section.settings.cta_link != blank %}
          <a class="hw-feature-panel__cta" href="{{ section.settings.cta_link }}">
            {{ section.settings.cta_label }}
          </a>
        {% endif %}

        <div class="hw-feature-panel__meta">
          <span class="hw-dot"></span>
          <span>{{ section.settings.meta }}</span>
        </div>
      </aside>

      <!-- RIGHT: FEATURE CARDS -->
      <div class="hw-feature-panel__cards" style="--cols: {{ section.settings.columns }};">
        {% assign items = 4 %}
        {% for i in (1..items) %}
          {% assign t = 'c' | append: i | append: '_title' %}
          {% assign x = 'c' | append: i | append: '_text' %}
          {% assign img = 'c' | append: i | append: '_image' %}

          <article class="hw-feature-card">
            <div class="hw-feature-card__icon">
              {% if section.settings[img] != blank %}
                <img
                  src="{{ section.settings[img] | image_url: width: 180 }}"
                  alt=""
                  loading="lazy"
                  width="44"
                  height="44"
                >
              {% else %}
                {% case i %}
                  {% when 1 %}
                    <svg viewBox="0 0 24 24" aria-hidden="true"><path d="M20.5 3.5c-6.2 1-10.8 4.3-13 9.3-.8 1.9-1 3.8-.7 5.7 1.8.3 3.8.1 5.7-.7 5-2.2 8.3-6.8 9.3-13zM7.8 18.2c1.5-4.7 5.2-8.4 9.9-9.9" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"/></svg>
                  {% when 2 %}
                    <svg viewBox="0 0 24 24" aria-hidden="true"><path d="M12 2l8 4v6c0 5-3.4 9.4-8 10-4.6-.6-8-5-8-10V6l8-4z" fill="none" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/></svg>
                  {% when 3 %}
                    <svg viewBox="0 0 24 24" aria-hidden="true"><path d="M3 13l2-6h14l2 6v6h-2a2 2 0 0 1-4 0H9a2 2 0 0 1-4 0H3v-6zM7 7l1.2-2h7.6L17 7" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
                  {% else %}
                    <svg viewBox="0 0 24 24" aria-hidden="true"><path d="M12 2v3M12 19v3M2 12h3M19 12h3" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"/><path d="M12 7a5 5 0 1 0 5 5" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"/><path d="M12 10a2 2 0 1 0 2 2" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"/></svg>
                {% endcase %}
              {% endif %}
            </div>

            <div class="hw-feature-card__content">
              <h3 class="hw-feature-card__title">{{ section.settings[t] }}</h3>
              <p class="hw-feature-card__text">{{ section.settings[x] }}</p>
            </div>
          </article>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<style>
  .hw-feature-panel{
    background: var(--hw-bg);
    padding: 26px 0;
  }
  .hw-feature-panel__inner{
    width: min(var(--hw-max), 92%);
    margin: 0 auto;
  }
  .hw-feature-panel__layout{
    display: grid;
    grid-template-columns: 420px 1fr;
    gap: 16px;
    align-items: stretch;
  }

  /* Left panel */
  .hw-feature-panel__aside{
    background: radial-gradient(900px 420px at 10% 0%, rgba(255,255,255,.10), transparent 55%),
                linear-gradient(180deg, var(--hw-aside), color-mix(in srgb, var(--hw-aside) 86%, #000));
    color: var(--hw-text);
    border-radius: 22px;
    padding: 22px;
    border: 1px solid rgba(255,255,255,.08);
    box-shadow: 0 16px 40px rgba(0,0,0,.18);
    position: relative;
    overflow: hidden;
  }
  .hw-feature-panel__badge{
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 7px 10px;
    border-radius: 999px;
    background: rgba(255,255,255,.10);
    border: 1px solid rgba(255,255,255,.14);
    font-size: 12px;
    font-weight: 800;
    letter-spacing: .2px;
  }
  .hw-feature-panel__badge::before{
    content:"";
    width: 8px; height: 8px;
    border-radius: 99px;
    background: var(--hw-accent);
    box-shadow: 0 0 0 4px rgba(255,107,0,.18);
  }
  .hw-feature-panel__title{
    margin: 14px 0 0;
    font-size: 22px;
    font-weight: 950;
    letter-spacing: .2px;
    line-height: 1.1;
  }
  .hw-feature-panel__sub{
    margin: 10px 0 0;
    font-size: 13.5px;
    color: var(--hw-muted);
    line-height: 1.35;
  }
  .hw-feature-panel__cta{
    display: inline-flex;
    margin-top: 14px;
    padding: 10px 14px;
    border-radius: 12px;
    background: var(--hw-accent);
    color: #0B1B2B;
    font-weight: 900;
    text-decoration: none;
    box-shadow: 0 12px 26px rgba(0,0,0,.18);
  }
  .hw-feature-panel__cta:hover{ filter: brightness(1.03); }
  .hw-feature-panel__meta{
    margin-top: 14px;
    display: flex;
    align-items: center;
    gap: 10px;
    color: color-mix(in srgb, var(--hw-muted) 88%, #fff);
    font-size: 12.5px;
  }
  .hw-dot{
    width: 6px; height: 6px;
    border-radius: 99px;
    background: rgba(255,255,255,.35);
  }

  /* Right cards */
  .hw-feature-panel__cards{
    background: transparent;
    display: grid;
    grid-template-columns: repeat(var(--cols), minmax(0, 1fr));
    gap: 14px;
  }

  .hw-feature-card{
    background: var(--hw-card);
    border: 1px solid var(--hw-border);
    border-radius: 20px;
    padding: 18px;
    box-shadow: 0 14px 34px rgba(0,0,0,.08);
    display: flex;
    gap: 14px;
    align-items: flex-start;
    min-height: 120px;
    transition: transform .18s ease, box-shadow .18s ease, border-color .18s ease;
  }
  .hw-feature-card:hover{
    transform: translateY(-2px);
    box-shadow: 0 18px 42px rgba(0,0,0,.10);
    border-color: color-mix(in srgb, var(--hw-border) 50%, var(--hw-accent));
  }

  .hw-feature-card__icon{
    width: 56px;
    height: 56px;
    border-radius: 18px;
    background: color-mix(in srgb, var(--hw-accent) 18%, #ffffff);
    border: 1px solid color-mix(in srgb, var(--hw-accent) 40%, #e5e7eb);
    display: grid;
    place-items: center;
    flex: 0 0 auto;
  }
  .hw-feature-card__icon img{ width: 34px; height: 34px; object-fit: contain; display:block; }
  .hw-feature-card__icon svg{ width: 26px; height: 26px; color: #0B1B2B; opacity: .9; }

  .hw-feature-card__title{
    margin: 2px 0 0;
    font-size: 15.5px;
    font-weight: 950;
    color: #0B1B2B;
  }
  .hw-feature-card__text{
    margin: 6px 0 0;
    font-size: 13.6px;
    line-height: 1.35;
    color: #4b5563;
  }

  @media (max-width: 980px){
    .hw-feature-panel__layout{
      grid-template-columns: 1fr;
    }
    .hw-feature-panel__cards{
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }
  @media (max-width: 520px){
    .hw-feature-panel__cards{
      grid-template-columns: 1fr;
    }
  }
</style>

