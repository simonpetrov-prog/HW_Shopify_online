      <div class="hw-fact-card__content">
        <h3 class="hw-fact-card__title">{{ block.settings.title }}</h3>
        <p class="hw-fact-card__text">{{ block.settings.text }}</p>
        {% if block.settings.link != blank and block.settings.link_label != blank %}
          <a class="hw-fact-card__link" href="{{ block.settings.link }}">{{ block.settings.link_label }}</a>
        {% endif %}
      </div>
    </article>
  {% endfor %}
{% else %}
