<section class="hw-overlay-hero" style="
  --max: {{ section.settings.max_width }}px;
  --accent: {{ section.settings.accent }};
  --panel: {{ section.settings.panel_bg }};
  --text: {{ section.settings.text }};
  --muted: {{ section.settings.muted }};
  --overlay: {{ section.settings.overlay_opacity | times: 0.01 }};
">
  <div class="hw-overlay-hero__inner">
    <div class="hw-overlay-hero__frame">
      <div class="hw-overlay-hero__bg">
        {% if section.settings.bg_image != blank %}
          <img
            src="{{ section.settings.bg_image | image_url: width: 2000 }}"
            alt=""
            loading="lazy"
            width="2000"
            height="1200"
          >
        {% endif %}
        <div class="hw-overlay-hero__veil"></div>
      </div>

      <div class="hw-overlay-hero__content">
        <div class="hw-overlay-hero__top">
          <div class="hw-overlay-hero__brand">{{ section.settings.brand_small }}</div>

          {% if section.settings.top_links != blank %}
            <div class="hw-overlay-hero__links">
              {{ section.settings.top_links }}
            </div>
          {% endif %}
        </div>

        <div class="hw-overlay-hero__grid">
          <!-- Left: Big title like Pinterest -->
          <div class="hw-overlay-hero__left">
            <div class="hw-overlay-hero__kicker">{{ section.settings.kicker }}</div>
            <div class="hw-overlay-hero__title">
              <span class="hw-overlay-hero__titleBig">{{ section.settings.title_big }}</span>
            </div>

            <p class="hw-overlay-hero__desc">{{ section.settings.desc }}</p>

            <div class="hw-overlay-hero__actions">
              {% if section.settings.cta_label != blank and section.settings.cta_link != blank %}
                <a class="hw-btn hw-btn--primary" href="{{ section.settings.cta_link }}">
                  {{ section.settings.cta_label }}
                </a>
              {% endif %}

              {% if section.settings.cta2_label != blank and section.settings.cta2_link != blank %}
                <a class="hw-btn hw-btn--ghost" href="{{ section.settings.cta2_link }}">
                  {{ section.settings.cta2_label }}
                </a>
              {% endif %}
            </div>

            {% if section.settings.slogan != blank %}
              <div class="hw-overlay-hero__slogan">
                <span class="hw-dot"></span>
                <span>{{ section.settings.slogan }}</span>
              </div>
            {% endif %}
          </div>

          <!-- Right: Small info panel -->
          <div class="hw-overlay-hero__right">
            <div class="hw-mini-panel">
              <div class="hw-mini-panel__title">{{ section.settings.panel_title }}</div>
              <div class="hw-mini-panel__text">{{ section.settings.panel_text }}</div>
            </div>
          </div>
        </div>

        <!-- Bottom: Facts on top of image -->
        <div class="hw-facts-row">
          <article class="hw-fact">
            <div class="hw-fact__num">01</div>
            <div class="hw-fact__body">
              <div class="hw-fact__title">{{ section.settings.c1_title }}</div>
              <div class="hw-fact__text">{{ section.settings.c1_text }}</div>
            </div>
          </article>

          <article class="hw-fact">
            <div class="hw-fact__num">02</div>
            <div class="hw-fact__body">
              <div class="hw-fact__title">{{ section.settings.c2_title }}</div>
              <div class="hw-fact__text">{{ section.settings.c2_text }}</div>
            </div>
          </article>

          <article class="hw-fact">
            <div class="hw-fact__num">03</div>
            <div class="hw-fact__body">
              <div class="hw-fact__title">{{ section.settings.c3_title }}</div>
              <div class="hw-fact__text">{{ section.settings.c3_text }}</div>
            </div>
          </article>

          <article class="hw-fact">
            <div class="hw-fact__num">04</div>
            <div class="hw-fact__body">
              <div class="hw-fact__title">{{ section.settings.c4_title }}</div>
              <div class="hw-fact__text">{{ section.settings.c4_text }}</div>
            </div>
          </article>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hw-overlay-hero{ padding: 24px 0; }
  .hw-overlay-hero__inner{ width: min(var(--max), 92%); margin: 0 auto; }

  .hw-overlay-hero__frame{
    position: relative;
    border-radius: 26px;
    overflow: hidden;
    box-shadow: 0 18px 55px rgba(0,0,0,.18);
    border: 1px solid rgba(0,0,0,.06);
    min-height: 420px;
  }

  .hw-overlay-hero__bg{
    position:absolute; inset:0;
    background: #0B1B2B;
  }
  .hw-overlay-hero__bg img{
    width:100%; height:100%;
    object-fit: cover;
    display:block;
    filter: saturate(1.05) contrast(1.02);
    transform: scale(1.02);
  }
  .hw-overlay-hero__veil{
    position:absolute; inset:0;
    background:
      radial-gradient(1000px 520px at 20% 10%, rgba(0,0,0,.15), transparent 55%),
      linear-gradient(90deg, rgba(11,27,43, var(--overlay)) 0%, rgba(11,27,43, calc(var(--overlay) - .10)) 55%, rgba(11,27,43, .20) 100%);
    pointer-events:none;
  }

  .hw-overlay-hero__content{
    position: relative;
    padding: 22px;
    color: var(--text);
  }

  .hw-overlay-hero__top{
    display:flex;
    align-items:center;
    justify-content: space-between;
    gap: 12px;
    margin-bottom: 16px;
  }
  .hw-overlay-hero__brand{
    font-weight: 900;
    letter-spacing: .25px;
    font-size: 13px;
    background: rgba(255,255,255,.10);
    border: 1px solid rgba(255,255,255,.14);
    padding: 7px 10px;
    border-radius: 999px;
    backdrop-filter: blur(6px);
  }
  .hw-overlay-hero__links{
    font-size: 12.5px;
    color: rgba(255,255,255,.78);
    display:flex; gap: 14px;
    flex-wrap: wrap;
    justify-content:flex-end;
  }

  .hw-overlay-hero__grid{
    display:grid;
    grid-template-columns: 1.35fr .65fr;
    gap: 16px;
    align-items: start;
  }

  .hw-overlay-hero__kicker{
    font-size: 14px;
    color: rgba(255,255,255,.85);
    margin-top: 2px;
  }

  .hw-overlay-hero__titleBig{
    display:block;
    font-size: clamp(44px, 6vw, 72px);
    font-weight: 950;
    letter-spacing: .5px;
    line-height: .95;
    text-transform: uppercase;
    text-shadow: 0 18px 45px rgba(0,0,0,.45);
  }

  .hw-overlay-hero__desc{
    margin: 14px 0 0;
    max-width: 520px;
    font-size: 13.5px;
    line-height: 1.45;
    color: rgba(255,255,255,.82);
  }

  .hw-overlay-hero__actions{
    margin-top: 14px;
    display:flex;
    gap: 10px;
    flex-wrap: wrap;
  }

  .hw-btn{
    display:inline-flex;
    align-items:center;
    justify-content:center;
    padding: 10px 14px;
    border-radius: 12px;
    font-weight: 900;
    text-decoration:none;
    transition: transform .16s ease, filter .16s ease, background .16s ease;
  }
  .hw-btn:hover{ transform: translateY(-1px); }

  .hw-btn--primary{
    background: var(--accent);
    color: #0B1B2B;
    box-shadow: 0 14px 28px rgba(0,0,0,.24);
  }
  .hw-btn--ghost{
    background: rgba(255,255,255,.10);
    border: 1px solid rgba(255,255,255,.18);
    color: #fff;
    backdrop-filter: blur(6px);
  }

  .hw-overlay-hero__slogan{
    margin-top: 14px;
    display:flex;
    align-items:center;
    gap: 10px;
    font-size: 12.8px;
    color: rgba(255,255,255,.80);
  }
  .hw-dot{
    width: 7px; height: 7px;
    border-radius: 99px;
    background: rgba(255,255,255,.35);
  }

  .hw-mini-panel{
    background: color-mix(in srgb, var(--panel) 82%, transparent);
    border: 1px solid rgba(255,255,255,.14);
    border-radius: 18px;
    padding: 14px;
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
  }
  .hw-mini-panel__title{
    font-weight: 950;
    font-size: 13.5px;
    letter-spacing: .2px;
  }
  .hw-mini-panel__text{
    margin-top: 8px;
    font-size: 12.6px;
    line-height: 1.4;
    color: rgba(255,255,255,.78);
  }

  .hw-facts-row{
    margin-top: 18px;
    display:grid;
    grid-template-columns: repeat(4, minmax(0,1fr));
    gap: 10px;
  }
  .hw-fact{
    background: rgba(0,0,0,.28);
    border: 1px solid rgba(255,255,255,.10);
    border-radius: 16px;
    padding: 12px 12px;
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    display:flex;
    gap: 12px;
    align-items:flex-start;
    min-height: 92px;
  }
  .hw-fact__num{
    font-weight: 950;
    font-size: 12px;
    color: rgba(255,255,255,.85);
    width: 34px; height: 34px;
    border-radius: 12px;
    display:grid;
    place-items:center;
    background: color-mix(in srgb, var(--accent) 28%, rgba(255,255,255,.10));
    border: 1px solid color-mix(in srgb, var(--accent) 55%, rgba(255,255,255,.10));
    color: #fff;
  }
  .hw-fact__title{
    font-weight: 950;
    font-size: 13px;
  }
  .hw-fact__text{
    margin-top: 5px;
    font-size: 12.2px;
    line-height: 1.35;
    color: rgba(255,255,255,.78);
  }

  @media (max-width: 980px){
    .hw-overlay-hero__grid{ grid-template-columns: 1fr; }
    .hw-facts-row{ grid-template-columns: repeat(2, minmax(0,1fr)); }
    .hw-overlay-hero__top{ gap: 10px; }
  }
  @media (max-width: 520px){
    .hw-facts-row{ grid-template-columns: 1fr; }
    .hw-overlay-hero__content{ padding: 16px; }
  }
</style>

