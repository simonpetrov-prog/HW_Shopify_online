  HW product grid â€“ minimal loop with data attributes for live filtering
{% endcomment %}
<div class="product-grid">
  {% for product in collection.products %}
    <article
      class="hw-product-card"
      data-title="{{ product.title | escape }}"
      data-price="{{ product.price }}"
      data-tags="{{ product.tags | join: ',' | escape }}"
    >
      <a href="{{ product.url }}">
        {% if product.featured_image %}
          <img src="{{ product.featured_image | image_url: width: 600 }}" alt="{{ product.title | escape }}" loading="lazy">
        {% endif %}
        <h3 class="hw-product-card__title">{{ product.title }}</h3>
      </a>
      <div class="hw-product-card__price">
        {{ product.price | money }}
      </div>
    </article>
  {% endfor %}
</div>

<style>
.product-grid{display:grid;grid-template-columns:repeat(auto-fill,minmax(200px,1fr));gap:16px}
.hw-product-card{border:1px solid #e5e5e5;border-radius:12px;padding:10px;background:#fff}
.hw-product-card img{width:100%;height:auto;display:block;border-radius:8px}
.hw-product-card__title{font-size:14px;font-weight:800;margin:8px 0 4px}
.hw-product-card__price{font-weight:700}
</style>
