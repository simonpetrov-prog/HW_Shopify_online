<section class="home-info-strip">
  <div class="container">
    <h2 class="home-info-title">
      Warum HW Central Seller?
    </h2>
    <p class="home-info-sub">
      Dein Shop für geprüfte Hot Wheels, sichere Verpackung und echten Sammler-Service.
    </p>

    <div class="home-info-grid">
      {% for block in section.blocks %}
        <div class="home-info-card">
          {% if block.settings.image %}
            <img 
              src="{{ block.settings.image | image_url: width: 160 }}" 
              alt="{{ block.settings.title | escape }}"
            >
          {% endif %}
          <h3>{{ block.settings.title }}</h3>
          <p>{{ block.settings.text }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
.home-info-strip{
  padding:48px 0;
  background:#f7f9ff;
  border-top:1px solid #e5e7eb;
  border-bottom:1px solid #e5e7eb;
}

.home-info-title{
  text-align:center;
  font-size:28px;
  font-weight:900;
  margin-bottom:6px;
}

.home-info-sub{
  text-align:center;
  color:#555;
  margin-bottom:32px;
}

.home-info-grid{
  display:grid;
  grid-template-columns:repeat(auto-fit,minmax(220px,1fr));
  gap:20px;
}

.home-info-card{
  background:#fff;
  border:1px solid #e5e7eb;
  border-radius:16px;
  padding:20px;
  text-align:center;
}

.home-info-card img{
  width:64px;
  height:64px;
  object-fit:contain;
  margin-bottom:12px;
}

.home-info-card h3{
  font-size:16px;
  font-weight:800;
  margin-bottom:6px;
}

.home-info-card p{
  font-size:14px;
  color:#555;
}
</style>

{% schema %}
{
  "name": "Info-Leiste – Shop Vorteile",
  "blocks": [
    {
      "type": "info",
      "name": "Info-Kachel",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Icon / Bild"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Titel",
          "default": "Sichere Verpackung"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Jedes Modell wird stoßfest und sammlersicher verpackt."
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "HW Info-Leiste"
    }
  ]
}
{% endschema %}
