<header class="header">
  <div class="header__inner">
    <a href="/" class="header__logo" aria-label="{{ settings.shop_name | default: shop.name }}">
      {% if settings.logo != blank %}
        <img src="{{ settings.logo | image_url: width: 200 }}" alt="{{ settings.shop_name | default: shop.name }}" height="50" loading="eager">
      {% else %}
        <strong>{{ settings.shop_name | default: shop.name }}</strong>
      {% endif %}
    </a>

    <nav class="header__nav" aria-label="Hauptnavigation">
      <ul>
        <li><a href="/">Startseite</a></li>
        <li><a href="/collections/all">Shop</a></li>
        <li><a href="/pages/about">Über uns</a></li>
        <li><a href="/pages/contact">Kontakt</a></li>
        <li><a href="/cart" aria-label="Warenkorb Seite">Warenkorb (<span data-cart-count>{{ cart.item_count }}</span>)</a></li>
        <li><a href="#" data-open-cart aria-label="Schnell-Warenkorb öffnen">Schnell-Warenkorb</a></li>
      </ul>
    </nav>
  </div>

  {{ 'theme.js' | asset_url | script_tag }}
</header>

<style>
.header { width:100%; border-bottom:1px solid var(--border); padding:12px 0; background:#fff; }
.header__inner { max-width:1200px; margin:0 auto; display:flex; align-items:center; justify-content:space-between; padding:0 20px; }
.header__logo img { display:block; }
.header__nav ul { display:flex; list-style:none; gap:20px; margin:0; padding:0; }
.header__nav a { text-decoration:none; color:#111; font-weight:500; }
.header__nav a:hover { color: var(--accent); }
</style>
