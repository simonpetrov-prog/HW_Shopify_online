<section class="hero">
  <div class="hero__inner">
    <h1>{{ settings.shop_name | default: shop.name }}</h1>
    <p>Entdecke exklusive Hot Wheels Modelle, Sammlerstücke und mehr.</p>
    <a href="/collections/all" class="btn">Zum Shop</a>
  </div>
</section>

<section class="container featured">
  <h2>Unsere neuesten Produkte</h2>
  {% assign collection = collections['all'] %}
  {% if collection and collection.products_count > 0 %}
    <div class="grid">
      {% for product in collection.products limit: 4 %}
        <article class="product product-card">
          <a href="{{ product.url }}">
            {% render 'product-badges', product: product %}
            <img src="{{ product.featured_image | img_url: '400x400' }}" alt="{{ product.title }}">
            <h3>{{ product.title }}</h3>
            <p>{{ product.price | money }}</p>
          </a>
        </article>
      {% endfor %}
    </div>
  {% else %}
    <p>Keine Produkte gefunden.</p>
  {% endif %}
</section>

<style>
.hero { background: var(--bg); text-align: center; padding: 60px 20px 40px; border-bottom: 2px solid var(--accent); }
.hero__inner h1 { font-size: 2rem; margin-bottom: 10px; color: var(--primary); }
.hero__inner p { font-size: 1.1rem; color: var(--text); margin-bottom: 20px; }
.btn { display:inline-block; margin-top:5px; padding:10px 20px; border-radius:4px; text-decoration:none; }

.featured { padding: 40px 0 60px; }
.featured h2 { text-align:center; margin-bottom:30px; color: var(--text); }
.grid { display:grid; gap:24px; grid-template-columns: repeat(auto-fit, minmax(220px, 1fr)); }
.product { border:1px solid var(--border); border-radius:10px; background:#fff; text-align:center; padding:12px; }
.product img { width:100%; height:200px; object-fit:contain; border-radius:6px; }
.product h3 { font-size:1rem; color:var(--text); margin:8px 0 4px; }
.product p { color:var(--primary); font-weight:600; }
</style>

{% schema %}
{
  "name": "Startseite – HW Business",
  "settings": []
}
{% endschema %}
