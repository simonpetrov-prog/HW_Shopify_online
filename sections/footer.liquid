<footer class="footer">
  <div class="footer__inner container">
    <div class="footer__col">
      <h3>HW Business</h3>
      <p>Königsblau. Orange. Hot Wheels Liebe.</p>
    </div>

    <div class="footer__col">
      <h3>Rechtliches</h3>
      {% if section.settings.menu_legal != blank %}
        <ul>
          {% for link in linklists[section.settings.menu_legal].links %}
            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      {% else %}
        <p><em>Kein Menü zugewiesen</em></p>
      {% endif %}
    </div>

    <div class="footer__col">
      <h3>Kontakt</h3>
      {% if section.settings.menu_contact != blank %}
        <ul>
          {% for link in linklists[section.settings.menu_contact].links %}
            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      {% else %}
        <p><em>Kein Menü zugewiesen</em></p>
      {% endif %}
    </div>
  </div>

  <div class="footer__bottom">
    <p>© 2025 HW_Central_seller — Alle Rechte vorbehalten</p>
  </div>
</footer>

<style>
.footer { background:#fff; border-top:2px solid var(--accent); padding:30px 0; color:#111; }
.footer__inner { display:flex; justify-content:space-between; flex-wrap:wrap; gap:40px; }
.footer__col h3 { color:var(--primary); font-weight:800; margin-bottom:8px; }
.footer__col ul { list-style:none; padding:0; margin:0; }
.footer__col ul li a { color:#111; text-decoration:none; }
.footer__col ul li a:hover { color:var(--accent); }
.footer__bottom { margin-top:30px; text-align:center; font-size:14px; color:#555; border-top:1px solid #eee; padding-top:14px; }
</style>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "link_list",
      "id": "menu_legal",
      "label": "Rechtliches Menü"
    },
    {
      "type": "link_list",
      "id": "menu_contact",
      "label": "Kontakt Menü"
    }
  ]
}
{% endschema %}
