<footer class="hw-footer">
  <div class="hw-footer__inner container">
    <!-- Linke Spalte: Brand / Text -->
    <div class="hw-footer__col hw-footer__col--brand">
      <h3 class="hw-footer__title">
        {{ section.settings.brand_title | default: "HW Business" }}
      </h3>
      <p class="hw-footer__text">
        {{ section.settings.brand_text | default: "Königsblau. Orange. Hot Wheels Liebe." }}
      </p>
    </div>

    <!-- Mitte: Rechtliches -->
    <nav class="hw-footer__col">
      <h4 class="hw-footer__heading">Rechtliches</h4>
      {% if section.settings.legal_menu != blank %}
        <ul class="hw-footer__list">
          {% for link in section.settings.legal_menu.links %}
            <li>
              <a href="{{ link.url }}" class="hw-footer__link">
                {{ link.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
      {% else %}
        <p class="hw-footer__hint">Bitte im Theme-Editor ein Menü auswählen.</p>
      {% endif %}
    </nav>

    <!-- Rechts: Kontakt -->
    <nav class="hw-footer__col">
      <h4 class="hw-footer__heading">Kontakt</h4>
      {% if section.settings.contact_menu != blank %}
        <ul class="hw-footer__list">
          {% for link in section.settings.contact_menu.links %}
            <li>
              <a href="{{ link.url }}" class="hw-footer__link">
                {{ link.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
      {% else %}
        <p class="hw-footer__hint">Bitte im Theme-Editor ein Menü auswählen.</p>
      {% endif %}
    </nav>
  </div>

  <div class="hw-footer__bottom">
    <div class="container hw-footer__bottom-inner">
      <span class="hw-footer__copy">
        © {{ "now" | date: "%Y" }} {{ shop.name }} — Alle Rechte vorbehalten
      </span>
    </div>
  </div>
</footer>

<style>
.hw-footer{
  margin-top:32px;
  background:#0b1020;
  color:#f9fafb;
  padding-top:28px;
  border-top:4px solid #0046BE;
}

/* Grundlayout */
.hw-footer__inner{
  display:flex;
  gap:32px;
  justify-content:space-between;
  align-items:flex-start;
  flex-wrap:wrap;
}

/* Spalten */
.hw-footer__col{
  min-width:180px;
  flex:1 1 0;
}
.hw-footer__col--brand{
  max-width:320px;
}

/* Typo */
.hw-footer__title{
  margin:0 0 8px;
  font-size:18px;
  font-weight:900;
  color:#ffffff;
}
.hw-footer__text{
  margin:0;
  font-size:14px;
  line-height:1.5;
  color:#e5e7eb;
}

.hw-footer__heading{
  margin:0 0 10px;
  font-size:15px;
  font-weight:800;
  color:#F97316; /* Orange Akzent */
}

.hw-footer__list{
  list-style:none;
  margin:0;
  padding:0;
}
.hw-footer__link{
  display:inline-block;
  padding:3px 0;
  font-size:14px;
  color:#e5e7eb;
  text-decoration:none;
}
.hw-footer__link:hover{
  color:#ffffff;
  text-decoration:underline;
}

.hw-footer__hint{
  margin:0;
  font-size:13px;
  color:#9ca3af;
}

/* Bottom Line */
.hw-footer__bottom{
  margin-top:24px;
  border-top:1px solid rgba(148,163,184,.35);
  padding:10px 0 14px;
}
.hw-footer__bottom-inner{
  display:flex;
  justify-content:center;
}
.hw-footer__copy{
  font-size:12px;
  color:#9ca3af;
}

/* Mobile */
@media (max-width: 768px){
  .hw-footer{
    padding-top:22px;
  }
  .hw-footer__inner{
    flex-direction:column;
    gap:20px;
  }
  .hw-footer__col{
    width:100%;
  }
}
</style>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "text",
      "id": "brand_title",
      "label": "Titel linke Spalte",
      "default": "HW Business"
    },
    {
      "type": "textarea",
      "id": "brand_text",
      "label": "Kurztext linke Spalte",
      "default": "Königsblau. Orange. Hot Wheels Liebe."
    },
    {
      "type": "link_list",
      "id": "legal_menu",
      "label": "Rechtliches Menü"
    },
    {
      "type": "link_list",
      "id": "contact_menu",
      "label": "Kontakt Menü"
    }
  ]
}
{% endschema %}
