{% section 'header' %}

<main class="container">
  {% if search.performed %}
    <h1 class="search-title">
      Suchergebnisse für „{{ search.terms }}“
    </h1>

    {% assign product_results = search.results | where: 'object_type', 'product' %}

    {% if product_results.size > 0 %}
      <div class="product-grid hw-search-grid">
        {% for item in product_results %}
          {% assign product = item %}
          {% render 'reccard', product: product %}
        {% endfor %}
      </div>
    {% else %}
      <p>Keine passenden Produkte gefunden.</p>
      <p>
        Tipp: Probier einen allgemeineren Begriff (z. B. „Ferrari“, „Lamborghini“, „Treasure Hunt“).
      </p>
    {% endif %}
  {% else %}
    <h1 class="search-title">Suche</h1>
    <p>Gib oben einen Suchbegriff ein, um unsere Modelle zu durchsuchen.</p>
  {% endif %}
</main>

{% section 'cart-drawer' %}
{% section 'footer' %}

<style>
  .search-title{
    margin:18px 0 14px;
    font-size:24px;
    font-weight:800;
    color:#0046BE;
  }
  .hw-search-grid{
    display:grid;
    grid-template-columns:repeat(auto-fit, minmax(220px, 1fr));
    gap:18px;
    margin-bottom:40px;
  }
</style>
